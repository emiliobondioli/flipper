{
  "name": "@ebondioli/flipper",
  "version": "0.3.2",
  "description": "Flip dot controller and browser client for AlfaZeta XY5",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/emiliobondioli/flipper.git"
  },
  "keywords": [
    "serial",
    "flip-dot",
    "fmiddleware",
    "interface"
  ],
  "author": "Emilio Bondioli",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/emiliobondioli/flipper/issues"
  },
  "homepage": "https://github.com/emiliobondioli/flipper#readme",
  "files": [
    "dist"
  ],
  "main": "./dist/flipper.cjs.js",
  "module": "./dist/flipper.es.js",
  "exports": {
    "./client": {
      "import": "./dist/client/index.es.js",
      "require": "./dist/client/index.cjs.js"
    },
    "./controller": {
      "import": "./dist/controller/index.es.js",
      "require": "./dist/controller/index.cjs.js"
    },
    "./simulator": {
      "import": "./dist/simulator/index.es.js",
      "require": "./dist/simulator/index.cjs.js"
    },
    "./simulator/style": {
      "import": "./dist/style.css",
      "require": "./dist/style.css"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "postbuild": "tsc src/main.ts -t es5 --allowJs --declaration --emitDeclarationOnly --sourceMap --esModuleInterop --outDir dist",
    "serve": "vite preview"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/express-ws": "^3.0.1",
    "@types/serialport": "^8.0.2",
    "sass": "^1.38.2",
    "typescript": "^4.3.2",
    "vite": "^2.5.1"
  },
  "dependencies": {
    "express": "^4.17.1",
    "express-ws": "^5.0.2",
    "serialport": "^9.2.0"
  }
}
